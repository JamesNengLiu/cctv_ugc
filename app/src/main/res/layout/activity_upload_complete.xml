<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <include layout="@layout/title_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_coffee"
        android:layout_marginTop="@dimen/dp62"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="辛苦上传！喝杯茶歇一会吧～"
        android:textAppearance="@style/FontH1"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/FontSummary.Small"
        android:ems="18"
        android:id="@+id/uploadedDes"
        android:layout_marginTop="@dimen/dp11"/>

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/dp37"
        style="@style/Button.BottomBtn"
        android:id="@+id/continueUpload"
        android:text="继续上传"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        />

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/dp37"
        style="@style/Button.BottomBtn"
        android:id="@+id/back"
        android:text="返回首页"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        />



</LinearLayout>