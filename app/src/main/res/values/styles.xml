<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/deepBule</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.DeepBlue" parent="Button">
        <item name="android:background">@drawable/btn_deepblue_selector</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.DeepBlue.4" parent="Button.DeepBlue">
        <item name="android:layout_width">@dimen/dp76</item>
        <item name="android:layout_height">@dimen/dp33</item>
    </style>

    <style name="Button.BottomBtn" parent="Button">
        <item name="android:background">@drawable/bottom_btn_selector</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NaviItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:background">@drawable/navi_item_bg</item>
    </style>

    <style name="NaviIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NaviItemNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/navi_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#d1d1d2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
